#---[ Library configuration ]------------------------------------------------------------

LIBNAME=jni3270
PACKAGE_NAME=@PACKAGE_NAME@
PACKAGE_VERSION=@PACKAGE_VERSION@
PACKAGE_RELEASE=@PACKAGE_RELEASE@

SOURCES= \
	$(wildcard src/native/*.cc) \
	$(wildcard src/native/@OSNAME@/*.cc)

#---[ Tools ]----------------------------------------------------------------------------

CXX=@CXX@
CC=@CC@
LD=@CXX@
LN_S=@LN_S@
MKDIR=@MKDIR_P@
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
XGETTEXT=@XGETTEXT@
MSGCAT=@MSGCAT@
WINDRES=@WINDRES@
AR=@AR@
VALGRIND=@VALGRIND@
JAVAC=@JAVAC@
JAR=@JAR@
JAVADOC=@JAVADOC@
ZIP=@ZIP@

#---[ Paths ]----------------------------------------------------------------------------

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
sbindir=@sbindir@
libdir=@libdir@
includedir=@includedir@
datarootdir=@datarootdir@
localedir=@localedir@
docdir=@docdir@
sysconfdir=@sysconfdir@
jnidir=@jnidir@
jvmjardir=@jvmjardir@
javadocdir=@javadocdir@

OBJDIR=.obj
OBJDBG=$(OBJDIR)/Debug
OBJRLS=$(OBJDIR)/Release

BINDIR=.bin
BINDBG=$(BINDIR)/Debug
BINRLS=$(BINDIR)/Release

#---[ Rules ]----------------------------------------------------------------------------

CFLAGS= \
	@CFLAGS@ \
	-g \
	-Isrc/include \
	-DBUILD_DATE=`date +%Y%m%d` \
	@JAVA_CFLAGS@ \
	@IPC3270_CFLAGS@

LDFLAGS= \
	@LDFLAGS@

LIBS= \
	@LIBS@ \
	@IPC3270_LIBS@

#---[ Debug Rules ]----------------------------------------------------------------------

$(OBJDBG)/%.o: \
	%.cc \
	src/include/private/br_app_pw3270_Terminal.h

	@echo $< ...
	@$(MKDIR) $(@D)

	@$(CXX) \
		$(CFLAGS) \
		-DDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-Wall -Wextra -fstack-check \
		-DDEBUG=1 \
		-DMODULES_DIR=@MODULE_DEBUG_PATH@ \
		-o $@ \
		-c $<

$(OBJDBG)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(dir $@)
	@$(WINDRES) $< -O coff -o $@

#---[ Release Rules ]--------------------------------------------------------------------

$(OBJRLS)/%.o: \
	%.cc \
	src/include/private/br_app_pw3270_Terminal.h

	@echo $< ...
	@$(MKDIR) $(@D)

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-MM -MT $@ -MF $(patsubst %.o,%.d,$@) $<

	@$(CXX) \
		$(CFLAGS) \
		-DNDEBUG=1 \
		-o $@ \
		-c $<

$(OBJRLS)/%.o: \
	%.rc

	@echo $< ...
	@$(MKDIR) $(dir $@)
	@$(WINDRES) $< -O coff -o $@

#---[ Release Targets ]------------------------------------------------------------------

all: \
	$(BINRLS)/$(LIBNAME)@DLLEXT@

Release: \
	$(BINRLS)/$(LIBNAME)@DLLEXT@

$(BINRLS)/$(LIBNAME)@DLLEXT@: \
	$(foreach SRC, $(basename $(SOURCES)), $(OBJRLS)/$(SRC).o)

	@$(MKDIR) $(dir $@)
	@echo $< ...
	@$(LD) \
		-shared -Wl,-soname,$(@F) \
		-o $@ \
		-L$(OBJRLS) \
		$(LDFLAGS) \
		$^ \
		$(LIBS)


#---[ Misc Targets ]--------------------------------------------------------------------

src/include/private/br_app_pw3270_Terminal.h: \
	src/Terminal.java
	
	@$(MKDIR) $(BINDIR)
	@$(MKDIR) $(dir $@)
	@echo $< ...

	@"$(JAVAC)" \
		-encoding utf-8 \
		-d $(BINDIR) \
		-h $(dir $@) \
		$<
		
#---[ Install Targets ]------------------------------------------------------------------

install: \
	install-@OSNAME@ \
	install-javadoc

install-javadoc: \
	src/Terminal.java

	@$(MKDIR) $(DESTDIR)$(javadocdir)
	@$(JAVADOC) \
		-encoding utf-8 \
		-d $(DESTDIR)$(javadocdir) \
		$^
		
doc: \
	src/Terminal.java

	@$(MKDIR) doc
	@$(JAVADOC) \
		-encoding utf-8 \
		-d doc \
		$^

jar: \
	$(BINDIR)/$(PACKAGE_NAME)-$(PACKAGE_VERSION).$(PACKAGE_RELEASE).jar
	
$(BINDIR)/$(PACKAGE_NAME)-$(PACKAGE_VERSION).$(PACKAGE_RELEASE).jar: \
	src/Terminal.java

	@$(MKDIR) $(dir $@)
	@echo $< ...

	@"$(JAVAC)" \
		-encoding utf-8 \
		-d $(BINDIR) \
		src/Terminal.java

	@"$(JAR)" \
		-cvf $@ \
		-C $(BINDIR) br

zip: \
	$(PACKAGE_NAME)-$(PACKAGE_VERSION).$(PACKAGE_RELEASE)-@host_cpu@.zip
	
$(PACKAGE_NAME)-$(PACKAGE_VERSION).$(PACKAGE_RELEASE)-@host_cpu@.zip: \
	package \
	doc
	
	@$(ZIP) \
		-9 -r \
		$@ \
		$(PACKAGE_NAME)-$(PACKAGE_VERSION).$(PACKAGE_RELEASE)-@host_cpu@.jar \
		LICENSE \
		doc
	
install-linux: \
	$(BINRLS)/$(LIBNAME)@DLLEXT@ \
	$(BINDIR)/$(PACKAGE_NAME)-$(PACKAGE_VERSION).$(PACKAGE_RELEASE).jar

	@$(MKDIR) $(DESTDIR)$(jvmjardir)
	@$(INSTALL_DATA) \
		$(BINDIR)/$(PACKAGE_NAME)-$(PACKAGE_VERSION).$(PACKAGE_RELEASE).jar \
		$(DESTDIR)$(jnidir)/$(PACKAGE_NAME)"-"$(PACKAGE_VERSION).$(PACKAGE_RELEASE).jar

	@$(MKDIR) $(DESTDIR)$(jnidir)
	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(LIBNAME)@DLLEXT@ \
		$(DESTDIR)$(jnidir)/lib$(LIBNAME)@DLLEXT@		
			
install-windows: \
	$(BINRLS)/$(LIBNAME)@DLLEXT@ \
	$(BINDIR/$(LIBNAME).jar

	@$(MKDIR) $(DESTDIR)$(jvmjardir)
	@$(MKDIR) $(DESTDIR)$(jvmjardir)
	@$(INSTALL_DATA) \
		$(BINDIR)/$(PACKAGE_NAME)-$(PACKAGE_VERSION).$(PACKAGE_RELEASE).jar \
		$(DESTDIR)$(jnidir)/$(PACKAGE_NAME)"-"$(PACKAGE_VERSION).$(PACKAGE_RELEASE).jar

	@$(MKDIR) $(DESTDIR)$(jnidir)
	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(LIBNAME)@DLLEXT@ \
		$(DESTDIR)$(jnidir)/lib$(LIBNAME)@DLLEXT@		

package: \
	$(BINRLS)/$(LIBNAME)@DLLEXT@ \
	src/Terminal.java

	@$(MKDIR) $(dir $@)
	@echo $< ...

	@"$(JAVAC)" \
		-encoding utf-8 \
		-d $(BINDIR) \
		src/Terminal.java

	@$(MKDIR) $(BINDIR)/lib
	@$(INSTALL_PROGRAM) \
		$(BINRLS)/$(LIBNAME)@DLLEXT@ \
		$(BINDIR)/lib		

	@"$(JAR)" \
		-cvf $(PACKAGE_NAME)-$(PACKAGE_VERSION).$(PACKAGE_RELEASE)-@host_cpu@.jar \
		-C $(BINDIR) br \
		-C $(BINDIR) lib

#---[ Debug Targets ]--------------------------------------------------------------------

Debug: \
	$(BINDBG)/$(LIBNAME)@DLLEXT@
 
$(BINDIR)/%.class: \
	testprograms/%.java \
	$(BINDBG)/$(LIBNAME)@DLLEXT@

	@echo $< ...
	@$(MKDIR) `dirname $@`
	@"$(JAVAC)" \
		-encoding utf-8 \
		-cp $(BINDIR) \
		-d $(BINDIR) \
		$<
 
run: \
	$(BINDBG)/$(LIBNAME)@DLLEXT@ \
	$(BINDIR)/test.class

	@ln -sf $(LIBNAME)@DLLEXT@ $(BINDBG)/lib$(LIBNAME)@DLLEXT@
	
	@LD_LIBRARY_PATH=$(BINDBG) \
		java \
			-Djava.library.path=$(BINDBG) \
			-cp $(BINDIR) test


$(BINDBG)/$(LIBNAME)@DLLEXT@: \
	$(foreach SRC, $(basename $(SOURCES)), $(OBJDBG)/$(SRC).o)

	@$(MKDIR) $(dir $@)
	@echo $< ...
	@$(LD) \
		-shared -Wl,-soname,$(@F) \
		-o $@ \
		-L$(BINDBG) \
		$(LDFLAGS) \
		$^ \
		$(LIBS)

#---[ Clean Targets ]--------------------------------------------------------------------

clean: \
	cleanDebug \
	cleanRelease

	@rm -f 	src/include/private/br_app_pw3270_Terminal.h

cleanDebug:

	@rm -fr $(OBJDBG)
	@rm -fr $(BINDBG)

cleanRelease:

	@rm -fr $(OBJRLS)
	@rm -fr $(BINRLS)

clean: \
	cleanDebug \
	cleanRelease

-include $(foreach SRC, $(basename $(SOURCES)), $(OBJDBG)/$(SRC).d)
-include $(foreach SRC, $(basename $(SOURCES)), $(OBJRLS)/$(SRC).d)

